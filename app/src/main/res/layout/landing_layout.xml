<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F3"
    android:orientation="vertical">
    <include layout="@layout/toolbar"></include>
    <SearchView
        android:id="@+id/edt_txt_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white_color"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="@string/enter_course_number"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        android:textColor="#6d6e71"
        android:textSize="@dimen/_12sdp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/course_to_steer"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/commentbck" />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn"
        android:text="@string/get_course"
        android:textColor="@color/white_color"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
</LinearLayout>